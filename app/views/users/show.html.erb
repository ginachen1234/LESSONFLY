  <h1>Name</h1>
  <h2><%= @user.first_name %></h2>

  <h1>Last name</h1>
  <h2><%= @user.last_name %></h2>

  <h1>E-mail</h1>
  <p><%= @user.email %></p>

  <h1>Skill</h1>
  <p><%= @user.skill %></p>

  <h1>Location</h1>
  <p><%= @user.location %></p>

  <% if @user.teacher %>
    <p>Teacher</p>
  <% else %>
    <p>Student</p>
  <% end %>

  <%= link_to "All teachers", users_path, class: "btn btn-primary" %>
  <%= link_to "Booking teacher", new_user_booking_path(@user), class: "btn btn-danger" %>

